pipeline {
    agent none
    stages {
        stage('nginx') {
            agent {
                docker {
                    image 'nginx:alpine'                    
                }
            }
            steps {                
                sh 'nginx -v'                
            }
        }
        stage('node') {
            agent {
                docker {
                    image 'node:alpine'                    
                }
            }
            steps {                
                sh 'node --version'                
            }
        }
        stage('mysql') {
            agent {
                docker {
                    image 'mysql:alpine'                    
                }
            }
            steps {                
                sh 'mysql -V'                
            }
        }
    }
}
