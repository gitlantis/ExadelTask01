pipeline {
    agent none
    stages {
        stage('nginx') {
            agent {
                docker {
                    image 'nginx:alpine'
                    args '--privileged -v $HOME/.m2:/home/jenkins/.m2 -ti -u 496 -e MAVEN_CONFIG=/home/jenkins/.m2 -e MAVEN_OPTS=-Xmx2048m'
                }
            }
            steps {                
                sh 'docker ps -a'                
            }
        }
        stage('node') {
            agent {
                docker {
                    image 'node:alpine'
                    args '--privileged -v $HOME/.m2:/home/jenkins/.m2 -ti -u 496 -e MAVEN_CONFIG=/home/jenkins/.m2 -e MAVEN_OPTS=-Xmx2048m'
                }
            }
            steps {                
                sh 'docker ps -a'                
            }
        }
        stage('mysql') {
            agent {
                docker {
                    image 'mysql:alpine'
                    args '--privileged -v $HOME/.m2:/home/jenkins/.m2 -ti -u 496 -e MAVEN_CONFIG=/home/jenkins/.m2 -e MAVEN_OPTS=-Xmx2048m'
                }
            }
            steps {                
                sh 'docker ps -a'                
            }
        }
    }
}
