pipeline {
    agent none
    stages {
        stage('nginx') {
            agent {
                docker {image 'nginx:alpine'}
            }
            steps {                
                sh 'docker ps -a'                
            }
        }
        stage('node') {
            agent {
                docker {image 'node:alpine'}
            }
            steps {                
                sh 'docker ps -a'                
            }
        }
        stage('mysql') {
            agent {
                docker {image 'mysql:alpine'}
            }
            steps {                
                sh 'docker ps -a'                
            }
        }
    }
}
